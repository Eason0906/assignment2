{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 350,
  "height": 180,
  "title": {"text": "EF Difference During 2009-2013", "frame": "group"},
  "style": "cell",
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/Eason0906/assignment2/main/data/EF_GDP(constant2010USD).csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"NAME\"]",
          "as": "properties.NAME"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "Country",
          "fields": ["properties.NAME"],
          "values": ["EFDelta"]
        },
        {
          "type": "formula",
          "expr": "datum.EFDelta/pow(10,6)",
          "as": "Difference of EF in 2009-2013"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Difference of EF in 2009-2013\"]) && isFinite(+datum[\"Difference of EF in 2009-2013\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "data('source_0')"},
      "type": "equirectangular"
    }
  ],
  "marks": [
    {
      "name": "marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "Difference of EF in 2009-2013"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"], \"Difference of EF in 2009-2013\": format(datum[\"Difference of EF in 2009-2013\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"Difference of EF in 2009-2013: \" + (format(datum[\"Difference of EF in 2009-2013\"], \"\")) + \"; Country: \" + (isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"])"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "sqrt",
      "domain": {"data": "source_0", "field": "Difference of EF in 2009-2013"},
      "range": "heatmap",
      "interpolate": "hcl",
      "zero": false
    }
  ],
  "legends": [
    {
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "title": "Difference of EF in 2009-2013"
    }
  ],
  "config": {}
}
