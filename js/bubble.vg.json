{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 300,
  "height": 180,
  "title": {"text": "GDP Difference During 2009-2013", "frame": "group"},
  "style": "cell",
  "data": [
    {"name": "continent_highlight_store"},
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/Eason0906/assignment2/main/data/EF_GDP(constant2010USD).csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {"type": "filter", "expr": "datum.GDPDelta > GDPDelta_above"},
        {
          "type": "filter",
          "expr": "Continent_selection == null || datum.Continent == Continent_selection"
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"GDP2009\"]) && isFinite(+datum[\"GDP2009\"]) && isValid(datum[\"GDP2013\"]) && isFinite(+datum[\"GDP2013\"]) && isValid(datum[\"GDPDelta\"]) && isFinite(+datum[\"GDPDelta\"])"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"GDP2009\"]) && isFinite(+datum[\"GDP2009\"]) && isValid(datum[\"GDP2013\"]) && isFinite(+datum[\"GDP2013\"])"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "unit",
      "value": {},
      "on": [
        {"events": "mousemove", "update": "isTuple(group()) ? group() : unit"}
      ]
    },
    {
      "name": "continent_highlight_Continent_legend",
      "value": null,
      "on": [
        {
          "events": [
            {
              "source": "view",
              "type": "click",
              "markname": "Continent_legend_symbols"
            },
            {
              "source": "view",
              "type": "click",
              "markname": "Continent_legend_labels"
            },
            {
              "source": "view",
              "type": "click",
              "markname": "Continent_legend_entries"
            }
          ],
          "update": "datum.value || item().items[0].items[0].datum.value",
          "force": true
        },
        {
          "events": [{"source": "view", "type": "click"}],
          "update": "!event.item || !datum ? null : continent_highlight_Continent_legend",
          "force": true
        }
      ]
    },
    {
      "name": "continent_highlight",
      "update": "vlSelectionResolve(\"continent_highlight_store\", \"union\", true)"
    },
    {
      "name": "GDPDelta_above",
      "value": -74340000000,
      "bind": {
        "input": "range",
        "min": -74340000000,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum GDPDelta: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    },
    {
      "name": "continent_highlight_tuple",
      "update": "continent_highlight_Continent_legend !== null ? {fields: continent_highlight_tuple_fields, values: [continent_highlight_Continent_legend]} : null"
    },
    {
      "name": "continent_highlight_tuple_fields",
      "value": [{"type": "E", "field": "Continent"}]
    },
    {
      "name": "continent_highlight_toggle",
      "value": false,
      "on": [
        {
          "events": {"merge": [{"source": "view", "type": "click"}]},
          "update": "event.shiftKey"
        }
      ]
    },
    {
      "name": "continent_highlight_modify",
      "on": [
        {
          "events": {"signal": "continent_highlight_tuple"},
          "update": "modify(\"continent_highlight_store\", continent_highlight_toggle ? null : continent_highlight_tuple, continent_highlight_toggle ? null : true, continent_highlight_toggle ? continent_highlight_tuple : null)"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "symbol",
      "style": ["circle"],
      "interactive": true,
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "opacity": [
            {
              "test": "!(length(data(\"continent_highlight_store\"))) || (vlSelectionTest(\"continent_highlight_store\", datum))",
              "value": 0.6
            },
            {"value": 0.2}
          ],
          "fill": {"scale": "color", "field": "Continent"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"GDP2009\": format(datum[\"GDP2009\"], \",\"), \"GDP2013\": format(datum[\"GDP2013\"], \",\"), \"GDPDelta\": format(datum[\"GDPDelta\"], \",\")}"
          },
          "ariaRoleDescription": {"value": "circle"},
          "description": {
            "signal": "\"Confirmed Cases: \" + (format(datum[\"GDP2009\"], \".2e\")) + \"; GDP2013: \" + (format(datum[\"GDP2013\"], \".2e\")) + \"; GDPDelta: \" + (format(datum[\"GDPDelta\"], \".1s\")) + \"; Continent: \" + (isValid(datum[\"Continent\"]) ? datum[\"Continent\"] : \"\"+datum[\"Continent\"]) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; GDP2009: \" + (format(datum[\"GDP2009\"], \",\"))"
          },
          "x": {"scale": "x", "field": "GDP2009"},
          "y": {"scale": "y", "field": "GDP2013"},
          "size": {"scale": "size", "field": "GDPDelta"},
          "shape": {"value": "circle"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "interactive": true,
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "align": {"value": "right"},
          "baseline": {"value": "middle"},
          "dx": {"value": -12},
          "fontSize": {"value": 11.5},
          "fontStyle": {"value": "italic"},
          "fill": {"value": "black"},
          "opacity": [
            {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
              "value": 1
            },
            {"value": 0}
          ],
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"GDP2009\": format(datum[\"GDP2009\"], \",\"), \"GDP2013\": format(datum[\"GDP2013\"], \",\"), \"GDPDelta\": format(datum[\"GDPDelta\"], \",\")}"
          },
          "description": {
            "signal": "\"Confirmed Cases: \" + (format(datum[\"GDP2009\"], \".2e\")) + \"; GDP2013: \" + (format(datum[\"GDP2013\"], \".2e\")) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; GDP2009: \" + (format(datum[\"GDP2009\"], \",\")) + \"; GDPDelta: \" + (format(datum[\"GDPDelta\"], \",\"))"
          },
          "x": {"scale": "x", "field": "GDP2009"},
          "y": {"scale": "y", "field": "GDP2013"},
          "text": {
            "signal": "isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "log",
      "domain": [100000000, 100000000000000],
      "range": [0, {"signal": "width"}],
      "nice": true
    },
    {
      "name": "y",
      "type": "log",
      "domain": [100000000, 100000000000000],
      "range": [{"signal": "height"}, 0],
      "nice": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "North America",
        "South America",
        "Europe",
        "Africa",
        "Asia",
        "Oceania"
      ],
      "range": [
        "#e41a1c",
        "#984ea3",
        "#ff7f00",
        "#a6cee3",
        "#377eb8",
        "#a65628"
      ]
    },
    {
      "name": "size",
      "type": "threshold",
      "domain": [0, 1000000000, 10000000000, 100000000000, 1000000000000],
      "range": [10, 50, 150, 200, 300, 500]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "tickCount": 6,
      "gridScale": "y",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "tickCount": 6,
      "gridScale": "x",
      "grid": true,
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Confirmed Cases",
      "format": ".2e",
      "tickCount": 6,
      "labelFlush": true,
      "labelOverlap": "greedy",
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "GDP2013",
      "format": ".2e",
      "tickCount": 6,
      "labelOverlap": "greedy",
      "zindex": 0
    }
  ],
  "legends": [
    {
      "fill": "color",
      "symbolType": "circle",
      "title": "Continent",
      "encode": {
        "labels": {
          "name": "Continent_legend_labels",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "(!length(data(\"continent_highlight_store\")) || (continent_highlight[\"Continent\"] && indexof(continent_highlight[\"Continent\"], datum.value) >= 0))",
                "value": 1
              },
              {"value": 0.35}
            ]
          }
        },
        "symbols": {
          "name": "Continent_legend_symbols",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "(!length(data(\"continent_highlight_store\")) || (continent_highlight[\"Continent\"] && indexof(continent_highlight[\"Continent\"], datum.value) >= 0))",
                "value": 0.6
              },
              {"value": 0.35}
            ]
          }
        },
        "entries": {
          "name": "Continent_legend_entries",
          "interactive": true,
          "update": {"fill": {"value": "transparent"}}
        }
      }
    },
    {
      "format": ".1s",
      "size": "size",
      "labelOverlap": "greedy",
      "symbolType": "circle",
      "title": "GDPDelta",
      "encode": {
        "symbols": {
          "update": {
            "fill": {"value": "black"},
            "fillOpacity": {"value": 0.6},
            "opacity": {"value": 0.6},
            "stroke": {"value": "transparent"}
          }
        }
      }
    }
  ],
  "config": {}
}